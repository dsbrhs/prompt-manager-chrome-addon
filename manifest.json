{
  "manifest_version": 3,
  "name": "Prompt Manager",
  "version": "1.0.0",
  "description": "Manage your prompts via a dedicated side panel.",
  
  "permissions": [
    "sidePanel",
    "storage",
    "tabs"
  ],

  "host_permissions": [
    "*://*.chatgpt.com/*",
    "*://chatgpt.com/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },

  "action": {
    "default_title": "Open Prompt Manager"
  }
}
