{
  "manifest_version": 3,
  "name": "Prompt Manager",
  "version": "1.0.0",
  "description": "Manage your prompts via a dedicated side panel.",
  
  "permissions": [
    "sidePanel",
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "*://chatgpt.com/*",
    "*://*.chatgpt.com/*",
    "*://chat.openai.com/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },

   "content_scripts": [
    {
      "matches": [
        "*://chatgpt.com/*",
        "*://*.chatgpt.com/*",
        "*://chat.openai.com/*"
      ],
      "js": ["content/contentScript.js"],
      "all_frames": true
    }
  ],

  "action": {
    "default_title": "Open Prompt Manager"
  }
}
