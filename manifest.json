{
    "manifest_version": 3,
    "name": "Prompt Manager Google Chrome Extension",
    "version": "0.1.0",
    "description": "Prototype of a prompt management tool.",
    "permissions": [
        "storage", 
        "activeTab", 
        "scripting",
        "sidePanel"
    ],
    "side_panel": {
        "default_path": "sidepanel/sidepanel.html"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Prompt Manager"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://chat.openai.com/*",
                "https://chatgpt.com/*",
                "https://www.chatgpt.com/*",
                "https://*.chatgpt.com/*"
            ],
            "js": ["content/contentScript.js"]
        }
    ]
}
